<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

  <enum id='org.gnome.shell.extensions.burn-my-windows.AnimationType'>
    <value value='1' nick='fire' />
    <value value='2' nick='matrix' />
    <value value='3' nick='tv' />
  </enum>

  <schema path="/org/gnome/shell/extensions/burn-my-windows/" id="org.gnome.shell.extensions.burn-my-windows">

    <key name="close-animation" enum="org.gnome.shell.extensions.burn-my-windows.AnimationType">
      <default>"fire"</default>
      <summary>Close Animation</summary>
      <description>The animation used for window closing.</description>
    </key>


    <key name="destroy-animation-time" type="i">
      <default>1500</default>
      <summary>Destroy Animation Time</summary>
      <description>The time it takes to burn the windows.</description>
    </key>

    <key name="destroy-dialogs" type="b">
      <default>false</default>
      <summary>Destroy Dialogs</summary>
      <description>Set to true to burn dialogs as well.</description>
    </key>

    <key name="flame-movement-speed" type="d">
      <default>0.5</default>
      <summary>Flame Movement Speed</summary>
      <description>The speed at which the flames move.</description>
    </key>

    <key name="flame-scale" type="d">
      <default>1.0</default>
      <summary>Flame Scale</summary>
      <description>The size of the flames.</description>
    </key>

    <key name="fire-color-1" type="s">
      <default>"rgba(76, 51, 25, 0.0)"</default>
      <summary>Fire Color 1</summary>
      <description>The first color of the fire gradient.</description>
    </key>

    <key name="fire-color-2" type="s">
      <default>"rgba(180, 55, 30, 0.7)"</default>
      <summary>Fire Color 2</summary>
      <description>The second color of the fire gradient.</description>
    </key>

    <key name="fire-color-3" type="s">
      <default>"rgba(255, 76, 38, 0.9)"</default>
      <summary>Fire Color 3</summary>
      <description>The third color of the fire gradient.</description>
    </key>

    <key name="fire-color-4" type="s">
      <default>"rgba(255, 166, 25, 1)"</default>
      <summary>Fire Color 4</summary>
      <description>The fourth color of the fire gradient.</description>
    </key>

    <key name="fire-color-5" type="s">
      <default>"rgba(255, 255, 255, 1)"</default>
      <summary>Fire Color 5</summary>
      <description>The fifth color of the fire gradient.</description>
    </key>


    <key name="matrix-scale" type="i">
      <default>20</default>
      <summary>Matrix Scale</summary>
      <description>The size of the matrix letters.</description>
    </key>

    <key name="matrix-randomness" type="d">
      <default>1.0</default>
      <summary>Matrix Randomness</summary>
      <description>The randomness of the matrix effect.</description>
    </key>

    <key name="matrix-tip-color" type="s">
      <default>"rgb(255, 255, 255)"</default>
      <summary>Matrix Tip Color</summary>
      <description>The color of the matrix trail tips.</description>
    </key>

    <key name="matrix-trail-color" type="s">
      <default>"rgb(25, 255, 89)"</default>
      <summary>Matrix Trail Color</summary>
      <description>The color matrix trails.</description>
    </key>

  </schema>

</schemalist>